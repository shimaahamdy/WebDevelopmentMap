@model IEnumerable<DBFirst.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Top_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Top_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Top_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Top_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Top_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
