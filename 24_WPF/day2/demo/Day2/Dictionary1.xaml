<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush  x:Key="BackBtn" StartPoint="0,0"
                             EndPoint="0,1">
        <GradientStop Color="BlanchedAlmond" 
                          Offset=".25"/>
        <GradientStop Color="SkyBlue" 
                          Offset=".5"/>
        <GradientStop Color="Teal" 
                          Offset=".75"/>

    </LinearGradientBrush>
    <Style TargetType="Button">
        <Style.Setters>
            <Setter Property="Background" Value="{StaticResource ResourceKey=BackBtn}"></Setter>
            <Setter Property="FontFamily" Value="Arial"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Width" Value="70"></Setter>
            <Setter Property="Height" Value="30"></Setter>

        </Style.Setters>
    </Style>

</ResourceDictionary>